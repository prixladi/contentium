{
  "compilerOptions": {
    "module": "commonjs",   
    "baseUrl": ".",
    "target": "ES2021",                    
    "strict": true,                           
    "esModuleInterop": true,           
    "resolveJsonModule": true,
    "skipLibCheck": true,         
    "noUnusedLocals": true,            
    "forceConsistentCasingInFileNames": true,
    //"rootDir": "./src",
    "outDir": "./dist",
    "paths": { "@shared/*": ["../shared/*"], },
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
